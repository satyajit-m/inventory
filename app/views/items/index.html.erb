
<h1>Items</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Category</th>
      <th scope="col">Status</th>
      <% if current_user.admin %>
        <th scope="col">Associated User</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.brand.name %></td>
        <td><%= item.category.name %></td>
        <td><%= item_status(item.status) %></td>
        <% if current_user.admin %>
          <td><%= format_user(item.user)  %></td>
          <td><%= show_icon_link(item)  %></td>
          <td><%= edit_icon_link(edit_item_path(item)) %></td>
          <td><%= delete_icon_link(item) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= new_text_link(new_item_path) if current_user.admin %>
  
