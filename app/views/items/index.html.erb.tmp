 <% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> alert-dismissible" role="alert">
    <p class="text-<%= key %>"><%= value %></p>
  </div>
<% end %>
<h1>Items</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Category</th>
      <th scope="col">Status</th>
      <% if current_user.admin %>
        <th scope="col">Assign User</th>
        <th scope="col">Associated User</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.brand.name %></td>
        <td><%= item.category.name %></td>
        <td><%= item_status(item.status) %></td>
        <% if current_user.admin %>
          <td>
            <% if item.storage.present? %>
              <%= link_to fa_icon("user-plus"), assign_item_path(item), class: "btn btn-info" %>
            <%end%>
          </td>
          <td>
            <ul>
              <% item.users.each do |user| %>
                <li><%= user.name %></li>
              <% end %>
            </ul>
          </td>
          <td><%= show_link(item)  %></td>
          <td><%= edit_link(edit_item_path(item)) %></td>
          <td><%= delete_link(item) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "New Item", new_item_path if current_user.admin %>
