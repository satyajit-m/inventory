<div class="card-body">
  <%= form_for @item, :url => url_for(:controller => 'items', :action => 'assign_user') do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "font-weight-bold" %>
      <p>
        <%= @item.name %>
      </p>
    </div>
    <div class="form-group">
      <%= form.label "Select Employee", class: "font-weight-bold" %>
      <%= form.select :user_ids, options_from_collection_for_select(list_users, :id, :name), { prompt: true }, { required: true, class: "form-control" } %>

    </div>
    <div class="actions">
      <%= form.submit "Add Employee", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
