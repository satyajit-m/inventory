<%= form_with(model: item, local: true, class: "card-body ") do |form| %>
<% if item.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

  <ul>
    <% item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= form.text_field :name, class: "form-control", placeholder: "Full Name" %>
</div>

<div class="form-group">
  <%= form.collection_select(:brand_id, Brand.all, :id, :name, { :prompt => "Select a Brand", :selected => @item.brand_id }, { class: "form-control" })%>
</div>

<div class="form-group">
  <%= form.collection_select(:category_id, Category.all, :id, :name, { :prompt => "Select a Category", :selected => @item.category_id }, { class: "form-control" })%>
</div>

<div class="form-group">
  <%= form.collection_select(:user_id, User.where(admin: false), :id, :name, { :prompt => "Select a User", :selected => @item.user_id }, { class: "form-control" })%>

</div>

<div class="form-group">
  <%= form.label :status %>
  <%= form.check_box :status, class: "form-control align-items-left" %>
</div>

<div class="form-group">
  <%= form.text_area :notes, placeholder: "Notes", class: "form-control" %>
</div>

<div class="actions">
  <%= form.submit nil, class: "btn btn-primary" %>
</div>
<% end %>