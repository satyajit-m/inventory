<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
    <tr>
      <th scope="row"><%= brand.id %></th>
      <td><%= brand.name %></td>
      <td><%= link_to fa_icon("eye"), brand, class: "btn btn-primary" %></td>
      <td><%= link_to fa_icon("pencil"), edit_brand_path(brand), class: "btn btn-info" %></td>
      <td><%=button_to(brand, method: :delete, class: "btn btn-danger") do %>
        <i class="fa fa-trash" aria-hidden="true"></i>

        <% end %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Brand', new_brand_path %>