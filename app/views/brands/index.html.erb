<!DOCTYPE html>
<html>
  <head>
    <title>Inventory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>
  <body>
    <p id="notice"><%= notice %></p>
    <h1>Brands</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <% if current_user.admin %>
            <th scope="col">Show</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <th scope="row"><%= brand.id %></th>
            <td><%= brand.name %></td>
            <% if current_user.admin %>
              <td><%= show_icon_link(brand)  %></td>
              <td><%= edit_icon_link(edit_brand_path(brand)) %></td>
              <td><%= delete_icon_link(brand) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= new_text_link(new_user_path) if current_user.admin %>
  </body>
</html>
