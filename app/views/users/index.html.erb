<p id="notice"><%= notice %></p>
<h1>Users</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th>user Type</th>
      <th>Items</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= check_status(user.status) %></td>
        <td><%= check_user(user.admin) %></td>
        <td>
          <ul><% user.items.each do |item|%>
              <li> <%= item.name %></li>
            <% end %></ul>
        </td>
        <td><%= link_to fa_icon("eye"), user, class: "btn btn-primary" %></td>
        <td><%= link_to fa_icon("edit"), edit_user_path(user), class: "btn btn-secondary" %></td>
        <td><%= link_to fa_icon("trash"), user, method: :user, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New User', new_user_path %>
