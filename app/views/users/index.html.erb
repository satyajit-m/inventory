<p id="notice"><%= notice %></p>
<h1>Users</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th>User Type</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= check_status(user.status) %></td>
        <td><%= check_user(user.admin) %></td>
        <td><%= show_icon_link(user)  %></td>
        <td><%= edit_icon_link(edit_user_path(user)) %></td>
        <td><%= delete_icon_link(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= new_text_link(new_user_path) %>
