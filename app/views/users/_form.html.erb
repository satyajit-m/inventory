<%= form_with(model: user, local: true, class: "card-body") do |form| %>
<% if user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
</div>

<div class="form-group">
  <%= form.text_field :email, class: "form-control", placeholder: "Enter Email (Registered with Gmail)" %>
</div>

<div class="form-group row">
  <div class="col ">
    <%= form.label :status %>
    <%= form.check_box :status, class: "form-control ", placeholder: "Enter Name" %>
  </div>
  <div class="col">
    <%= form.label :admin %>
    <%= form.check_box :admin, class: "form-control", placeholder: "Enter Name" %>
  </div>
</div>

<div class="form-group">

</div>

<div class="actions">
  <%= form.submit nil, class: "btn btn-primary" %>
</div>
<% end %>