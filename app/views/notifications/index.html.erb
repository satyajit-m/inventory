<p id="notice"><%= notice %></p>
<h1>Notifications</h1>
<table class="table table-hover" id="notif_body">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Sender</th>
      <th scope="col">Message</th>
      <th scope="col">Time</th>
    </tr>
  </thead>
  <tbody >
    <% @notifications.each do |notif| %>
      <tr class="table-<%= notif.priority %> ">
        <td><%= notif.id %></td>
        <td><%= notif.sender.name %></td>
        <td><%= notif.message %></td>
        <td><%= notif.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
